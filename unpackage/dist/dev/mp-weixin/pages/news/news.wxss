.news .scroll {
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.news .scroll .scroll-item {
  width: 33%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: rgba(9, 2, 62, 0.3);
  position: relative;
}
.news .scroll .scroll-item::after {
  content: '';
  width: 0;
  height: 0;
  border: 2rpx solid #5468FF;
  position: absolute;
  left: 50%;
  bottom: 0;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  -webkit-transition: 0.5s;
  transition: 0.5s;
  display: none;
}
.news .scroll .scroll-item.on {
  font-family: PingFangSC-Semibold;
  font-size: 14px;
  color: #5468FF;
  -webkit-transition: 0.5s;
  transition: 0.5s;
}
.news .scroll .scroll-item.on::after {
  width: 20%;
  display: inline-block;
  -webkit-transition: 0.5s;
  transition: 0.5s;
}
.news .news-box .news-item {
  padding: 20rpx 30rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  background-color: #fff;
  border-bottom: 1rpx solid #F7F7FA;
}
.news .news-box .news-item:last-child {
  border-bottom: none;
}
.news .news-box .news-item:first-child {
  margin-top: 30rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.news .news-box .news-item .item-header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.news .news-box .news-item .item-header .header-left {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #09023E;
}
.news .news-box .news-item .item-header .header-right {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: rgba(9, 2, 62, 0.3);
}
.news .news-box .news-item .item-bottom {
  margin-top: 8rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: rgba(9, 2, 62, 0.3);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

