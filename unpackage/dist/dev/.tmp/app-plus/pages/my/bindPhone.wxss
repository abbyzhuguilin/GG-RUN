.bindPhone {
  width: 100%;
  height: 100%;
  background-color: #f6f6fa;
}
.bindPhone .bindPhone-header {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.bindPhone .bindPhone-header .my-phone {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #09023E;
  letter-spacing: -0.34px;
}
.bindPhone .bindPhone-header .phone-number {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #09023E;
  letter-spacing: -0.34px;
  text-align: right;
}
.bindPhone .change-box {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-top: 50rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.bindPhone .change-box .changButton-pwd {
  width: 330rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #FF8516;
  border-radius: 2px;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #FFFFFF;
  letter-spacing: -0.34px;
  text-align: center;
}
.bindPhone .change-box .changButton-phone {
  width: 330rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin-left: 30rpx;
  box-sizing: border-box;
  background: #5468FF;
  border-radius: 2px;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #FFFFFF;
  letter-spacing: -0.34px;
  text-align: center;
}

