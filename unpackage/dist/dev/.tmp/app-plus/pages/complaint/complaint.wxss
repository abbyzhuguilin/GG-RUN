page {
  background: #F7F7FA;
}
.opinion-list {
  width: 100%;
  background: #FFFFFF;
  border-bottom: 1px solid #F7F7FA;
}
.opinion-list > view {
  width: 690rpx;
  margin: 0 30rpx;
  padding: 30rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.opinion-list > view .item {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 14px;
  color: #09023E;
  letter-spacing: -0.34px;
}
.opinion-list > view .item .radio {
  width: 36rpx;
  height: 36rpx;
  border: 1px solid rgba(9, 2, 62, 0.3);
  margin-right: 20rpx;
  border-radius: 50%;
}
.opinion-list > view .item .blue {
  border: 1px solid #5468FF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.opinion-list > view .item .blue > view {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #5468FF;
}
.opinion-list > view .item + .item {
  margin-top: 28rpx;
}
.opinion-content {
  width: 100%;
  background: #FFFFFF;
}
.opinion-content > view {
  width: 690rpx;
  margin: 0 30rpx;
  padding-top: 28rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.opinion-content > view textarea {
  width: 690rpx;
  height: 352rpx;
  font-size: 14px;
}
.opinion-content > view > view {
  width: 690rpx;
  font-size: 14px;
  color: rgba(9, 2, 62, 0.3);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
}
.opinion-img {
  width: 100%;
  background: #FFFFFF;
  margin-bottom: 120rpx;
}
.opinion-img .imgList {
  width: 720rpx;
  padding: 30rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  margin-left: 30rpx;
}
.opinion-img .imgList .img-item {
  position: relative;
  margin-right: 20rpx;
}
.opinion-img .imgList .img-item image {
  width: 150rpx;
  height: 150rpx;
}
.opinion-img .imgList .img-item:last-child {
  margin-right: 0;
}
.opinion-img .imgList .img-item .icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 999;
}
.opinion-img .imgList .uploadImg image {
  width: 150rpx;
  height: 150rpx;
}
.placeHolder-Class {
  font-size: 14px;
  color: rgba(9, 2, 62, 0.3) !important;
}
.confirmButton {
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
  background: #5468FF;
  border-radius: 2px;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #FFFFFF;
}

